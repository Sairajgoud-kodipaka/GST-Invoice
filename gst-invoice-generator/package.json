{
  "name": "gst-invoice-generator",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:electron": "node scripts/clean-dist.js && next build && node scripts/copy-standalone.js",
    "start": "next start",
    "lint": "eslint",
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build:electron && electron-builder",
    "electron:build:win": "node scripts/build-with-retry.js",
    "electron:pack": "npm run build:electron && electron-builder --dir"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-toast": "^1.2.15",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.468.0",
    "next": "^15.5.7",
    "number-precision": "^1.6.0",
    "papaparse": "^5.5.3",
    "postcss": "^8.5.6",
    "puppeteer": "^23.11.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-dropzone": "^14.3.8",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/jszip": "^3.4.1",
    "@types/node": "^22.19.2",
    "@types/papaparse": "^5.5.1",
    "@types/puppeteer": "^7.0.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.39.1",
    "eslint-config-next": "^15.5.7",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.webplanx.gst-invoice-generator",
    "productName": "GST Invoice Generator",
    "directories": {
      "output": "dist-electron-build",
      "buildResources": "build"
    },
    "asar": true,
    "files": [
      ".next/static/**/*",
      "electron/**/*",
      "package.json",
      "!node_modules/**/*",
      "!.next/standalone/**/*"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": ".next/standalone",
        "filter": ["**/*"]
      }
    ],
    "extraFiles": [
      {
        "from": "public",
        "to": "public",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/app-icon.ico",
      "publisherName": "WebPlanX"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GST Invoice Generator",
      "include": "installer.nsh"
    }
  }
}
